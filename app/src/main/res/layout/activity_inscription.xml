<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back_ins"
    tools:context="com.tunisair.khawla.tunisair.InscriptionActivity">

    <ScrollView
        android:id="@+id/scrollView5"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/constraintLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profile_layout"
            android:layout_marginTop="32dp"
            android:background="#fff"
            android:elevation="4dp"
            android:orientation="vertical"
            android:paddingBottom="20dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/header_cover_image"
            tools:layout_editor_absoluteX="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/nom"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ems="10"
                        android:hint="Nom *"
                        android:inputType="textPersonName"
                        android:textColor="@color/common_google_signin_btn_text_light_focused"
                        android:textColorHint="@color/common_google_signin_btn_text_light_focused" />

                    <EditText
                        android:id="@+id/prenom"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ems="10"
                        android:hint="PrÃ©nom *"
                        android:inputType="textPersonName"
                        android:textColor="@color/common_google_signin_btn_text_light_focused"
                        android:textColorHint="@color/common_google_signin_btn_text_light_focused" />
                </LinearLayout>

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1">

                    <RadioButton
                        android:id="@+id/rd_m"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:onClick="onRadioButtonClicked"
                        android:buttonTint="@color/colorPrimary"
                        android:text="M"
                        android:textColor="@color/common_google_signin_btn_text_light_focused" />

                    <RadioButton
                        android:id="@+id/rd_mme"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:onClick="onRadioButtonClicked"
                        android:buttonTint="@color/colorPrimary"
                        android:text="Mme"
                        android:textColor="@color/common_google_signin_btn_text_light_focused" />

                    <RadioButton
                        android:id="@+id/rd_mle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:onClick="onRadioButtonClicked"
                        android:buttonTint="@color/colorPrimary"
                        android:text="Mlle"
                        android:textColor="@color/common_google_signin_btn_text_light_focused" />
                </RadioGroup>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/naissance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:cursorVisible="false"
                    android:ems="10"
                    android:focusableInTouchMode="false"
                    android:hint="Date naissance *"
                    android:inputType="date"
                    android:onClick="get_date"
                    android:textColor="@color/common_google_signin_btn_text_light_focused"
                    android:textColorHint="@color/common_google_signin_btn_text_light_focused"
                    tools:layout_editor_absoluteX="0dp"
                    tools:layout_editor_absoluteY="482dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="Adresse Email *"
                    android:inputType="textEmailAddress"
                    android:textColor="@color/common_google_signin_btn_text_light_focused"
                    android:textColorHint="@color/common_google_signin_btn_text_light_focused" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="Mot de passe *"
                    android:inputType="textPassword"
                    android:textColor="@color/common_google_signin_btn_text_light_focused"
                    android:textColorHint="@color/common_google_signin_btn_text_light_focused" />

                <EditText
                    android:id="@+id/conf_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="Confirmation *"
                    android:inputType="textPassword"
                    android:textColor="@color/common_google_signin_btn_text_light_focused"
                    android:textColorHint="@color/common_google_signin_btn_text_light_focused" />

            </LinearLayout>

            <EditText
                android:id="@+id/num_pass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Numero passport *"
                android:inputType="textPersonName"
                android:textColor="@color/common_google_signin_btn_text_light_focused"
                android:textColorHint="@color/common_google_signin_btn_text_light_focused" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/ville"
                    android:layout_width="201dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="ville *"
                    android:inputType="textPersonName"
                    android:textColor="@color/common_google_signin_btn_text_light_focused"
                    android:textColorHint="@color/common_google_signin_btn_text_light_focused" />

                <EditText
                    android:id="@+id/code_post"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="Code Postal *"
                    android:inputType="textPostalAddress|number"
                    android:textColor="@color/common_google_signin_btn_text_light_focused"
                    android:textColorHint="@color/common_google_signin_btn_text_light_focused" />
            </LinearLayout>

            <EditText
                android:id="@+id/adr_domic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/adresse_domicile"
                android:inputType="text"
                android:textColor="@color/common_google_signin_btn_text_light_focused"
                android:textColorHint="@color/common_google_signin_btn_text_light_focused" />

            <TextView
                android:id="@+id/textView28"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="15dp"
                android:text="@string/tous_les_champs_doivent_tre_renseign_s"
                android:textColor="@color/colorPrimary"
                android:textSize="12sp" />
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/suivant"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="540dp"
        android:onClick="verif"
        android:text="@string/suivant"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:theme="@style/MyButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>