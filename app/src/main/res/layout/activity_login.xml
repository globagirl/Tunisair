<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tunisairr"
    tools:context="com.tunisair.khawla.tunisair.LoginActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@drawable/logo" />

    <EditText
        android:id="@+id/login"
        android:layout_width="260dp"
        android:layout_height="52dp"
        android:layout_below="@+id/imageView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="117dp"
        android:drawableLeft="@drawable/ic_user"
        android:ems="10"
        android:hint="Nom d'utilisateur"
        android:textColorHint="#ffefef"
        android:inputType="textPersonName"
        android:paddingLeft="10dp"
        android:background="@drawable/oval"
        android:textColor="@android:color/background_light"
        android:textColorLink="@color/ic_launcher_background"
        app:layout_constraintBottom_toBottomOf="@+id/password"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/password"
        android:layout_width="260dp"
        android:layout_height="52dp"
        android:layout_alignLeft="@+id/login"
        android:layout_alignStart="@+id/login"
        android:layout_below="@+id/login"
        android:layout_marginTop="20dp"
        android:drawableLeft="@drawable/ic_locked"
        android:ems="10"
        android:hint="Mot de passe"
        android:textColorHint="#ffefef"
        android:inputType="textPassword"
        android:paddingLeft="10dp"
        android:background="@drawable/oval"
        android:textColor="@android:color/background_light"
        android:textColorLink="@color/ic_launcher_background"
        app:layout_constraintBottom_toTopOf="@+id/button_connexion"
        app:layout_constraintStart_toStartOf="@+id/login" />

    <Button
        android:id="@+id/button_connexion"
        style="@style/Widget.AppCompat.Button.Small"
        android:layout_width="200dp"
        android:layout_height="52dp"
        android:layout_below="@+id/password"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:background="@drawable/button"
        android:onClick="connecter"
        android:text="Se Connecter"
        android:textColor="@android:color/holo_red_dark"
        app:layout_constraintBottom_toTopOf="@+id/button_inscription"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/password" />

    <Button
        android:id="@+id/button_inscription"
        android:layout_width="200dp"
        android:layout_height="52dp"
        android:layout_alignLeft="@+id/button_connexion"
        android:layout_alignStart="@+id/button_connexion"
        android:layout_below="@+id/button_connexion"
        android:background="@drawable/button"
        android:onClick="inscrire"
        android:text="S'inscrire"
        android:textColor="@android:color/holo_red_dark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/button_connexion" />

</RelativeLayout>
