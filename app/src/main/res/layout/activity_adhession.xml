<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back_ins"
    tools:context=".AdhessionActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:orientation="vertical"
            android:padding="20dp"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView25"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="1"
                    android:text="@string/type_adh_sion"
                    android:textColor="@color/common_google_signin_btn_text_light_focused"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <RadioButton
                        android:id="@+id/indiv"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:layout_weight="1"
                        android:onClick="onRadioButton_type"
                        android:scaleX="0.8"
                        android:scaleY="0.8"
                        android:text="@string/individuelle"
                        android:buttonTint="@color/colorPrimary"
                        android:textColor="@color/common_google_signin_btn_text_light_focused"
                        android:textSize="12sp" />

                    <RadioButton
                        android:id="@+id/fami"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:layout_marginLeft="1dp"
                        android:layout_weight="1"
                        android:buttonTint="@color/colorPrimary"
                        android:onClick="onRadioButton_type"
                        android:scaleX="0.8"
                        android:scaleY="0.8"
                        android:text="@string/familiale"
                        android:textColor="@color/common_google_signin_btn_text_light_focused"
                        android:textSize="12sp" />
                </RadioGroup>

            </LinearLayout>

            <EditText
                android:id="@+id/autre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/autre_programme"
                android:inputType="textPersonName"
                android:textColor="@color/common_google_signin_btn_text_light_focused"
                android:textColorHint="@color/common_google_signin_btn_text_light_focused"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textView26"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:text="@string/langue_de_communication"
                android:textColor="@color/common_google_signin_btn_text_light_focused"
                android:textSize="14sp"
                android:textStyle="bold" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/fr"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_weight="1"
                    android:buttonTint="@color/colorPrimary"
                    android:onClick="onRadioButton_langue"
                    android:scaleX="0.8"
                    android:scaleY="0.8"
                    android:text="@string/fran_ais"
                    android:textColor="@color/common_google_signin_btn_text_light_focused"
                    android:textSize="12sp" />

                <RadioButton
                    android:id="@+id/en"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_marginLeft="1dp"
                    android:layout_weight="1"
                    android:buttonTint="@color/colorPrimary"
                    android:onClick="onRadioButton_langue"
                    android:scaleX="0.8"
                    android:scaleY="0.8"
                    android:text="@string/english"
                    android:textColor="@color/common_google_signin_btn_text_light_focused"
                    android:textSize="12sp" />

                <RadioButton
                    android:id="@+id/ar"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_marginLeft="2dp"
                    android:layout_weight="1"
                    android:buttonTint="@color/colorPrimary"
                    android:onClick="onRadioButton_langue"
                    android:scaleX="0.8"
                    android:scaleY="0.8"
                    android:text="@string/arabic"
                    android:textColor="@color/common_google_signin_btn_text_light_focused"
                    android:textSize="12sp" />
            </RadioGroup>

            <TextView
                android:id="@+id/textView31"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="10dp"
                android:background="@color/backEditText"
                android:text="@string/lieu_d_achat_de_vos_billets"
                android:textColor="@color/common_google_signin_btn_text_light_focused"
                android:textSize="14sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/agence_habit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                android:ems="10"
                android:hint="@string/agence_habituelle"
                android:textColor="@color/common_google_signin_btn_text_light_focused"
                android:textColorHint="@color/common_google_signin_btn_text_light_focused"
                android:inputType="textPersonName"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/point"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="@string/point_de_vente"
                    android:inputType="textPersonName"
                    android:textColor="@color/common_google_signin_btn_text_light_focused"
                    android:textColorHint="@color/common_google_signin_btn_text_light_focused"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/site"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="@string/site_vendeur"
                    android:inputType="textPersonName"
                    android:textColor="@color/common_google_signin_btn_text_light_focused"
                    android:textColorHint="@color/common_google_signin_btn_text_light_focused"
                    android:textSize="14sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView32"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:text="@string/pr_f_rence_de_si_ge"
                android:textColor="@color/common_google_signin_btn_text_light_focused"
                android:textSize="14sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">


                <RadioGroup
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <RadioButton
                        android:id="@+id/hublot"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:layout_weight="1"
                        android:buttonTint="@color/colorPrimary"
                        android:onClick="onRadioButton_prefe"
                        android:scaleX="0.8"
                        android:scaleY="0.8"
                        android:text="@string/c_t_hublot"
                        android:textColor="@color/common_google_signin_btn_text_light_focused"
                        android:textSize="12sp" />

                    <RadioButton
                        android:id="@+id/couloir"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:layout_weight="1"
                        android:buttonTint="@color/colorPrimary"
                        android:onClick="onRadioButton_prefe"
                        android:scaleX="0.8"
                        android:scaleY="0.8"
                        android:text="@string/c_t_couloir"
                        android:textColor="@color/common_google_signin_btn_text_light_focused"
                        android:textSize="12sp" />

                    <RadioButton
                        android:id="@+id/indif"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:layout_marginLeft="1dp"
                        android:layout_weight="1"
                        android:buttonTint="@color/colorPrimary"
                        android:onClick="onRadioButton_prefe"
                        android:scaleX="0.8"
                        android:scaleY="0.8"
                        android:text="@string/indiff_rent"
                        android:textColor="@color/common_google_signin_btn_text_light_focused"
                        android:textSize="12sp" />
                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView33"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:text="Préférence Repas"
                    android:textColor="@color/common_google_signin_btn_text_light_focused"
                    android:textColorHint="@color/common_google_signin_btn_text_light_focused"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/spinner"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:backgroundTint="@color/colorPrimary"
                    android:textColor="@color/common_google_signin_btn_text_light_focused"
                    android:textColorHint="@color/common_google_signin_btn_text_light_focused"
                    android:layout_weight="1" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView34"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:text="@string/classe_habituelle_de_voyage"
                android:textColor="@color/common_google_signin_btn_text_light_focused"
                android:textSize="14sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <RadioGroup
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <RadioButton
                        android:id="@+id/affaire"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:layout_marginLeft="3dp"
                        android:layout_weight="1"
                        android:buttonTint="@color/colorPrimary"
                        android:onClick="onRadioButton_classe"
                        android:scaleX="0.8"
                        android:scaleY="0.8"
                        android:text="@string/affaire"
                        android:textColor="@color/common_google_signin_btn_text_light_focused"
                        android:textSize="12sp" />

                    <RadioButton
                        android:id="@+id/eco"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:layout_weight="1"
                        android:buttonTint="@color/colorPrimary"
                        android:onClick="onRadioButton_classe"
                        android:scaleX="0.8"
                        android:scaleY="0.8"
                        android:text="@string/economique"
                        android:textColor="@color/common_google_signin_btn_text_light_focused"
                        android:textSize="12sp" />
                </RadioGroup>
            </LinearLayout>

            <TextView
                android:id="@+id/textView35"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="10dp"
                android:text="@string/mode_de_paiement"
                android:textColor="@color/common_google_signin_btn_text_light_focused"
                android:textSize="14sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <RadioGroup
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <RadioButton
                        android:id="@+id/carte"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:layout_weight="1"
                        android:buttonTint="@color/colorPrimary"
                        android:onClick="onRadioButton_mode"
                        android:scaleX="0.8"
                        android:scaleY="0.8"
                        android:text="@string/carte_de_cr_dit"
                        android:textColor="@color/common_google_signin_btn_text_light_focused"
                        android:textSize="12sp" />

                    <RadioButton
                        android:id="@+id/cashe"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:layout_marginLeft="4dp"
                        android:layout_weight="1"
                        android:buttonTint="@color/colorPrimary"
                        android:onClick="onRadioButton_mode"
                        android:scaleX="0.8"
                        android:scaleY="0.8"
                        android:text="@string/cashe"
                        android:textColor="@color/common_google_signin_btn_text_light_focused"
                        android:textSize="12sp" />

                    <RadioButton
                        android:id="@+id/cheque"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:layout_marginLeft="3dp"
                        android:layout_weight="1"
                        android:buttonTint="@color/colorPrimary"
                        android:onClick="onRadioButton_mode"
                        android:scaleX="0.8"
                        android:scaleY="0.8"
                        android:text="@string/ch_que"
                        android:textColor="@color/common_google_signin_btn_text_light_focused" />
                </RadioGroup>
            </LinearLayout>

            <TextView
                android:id="@+id/textView36"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="10dp"
                android:text="@string/vos_habitude_de_voyage"
                android:textColor="@color/common_google_signin_btn_text_light_focused"
                android:textSize="12sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <RadioGroup
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <RadioButton
                        android:id="@+id/seul"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:layout_marginLeft="24dp"
                        android:layout_weight="1"
                        android:buttonTint="@color/colorPrimary"
                        android:onClick="onRadioButton_habi"
                        android:scaleX="0.8"
                        android:scaleY="0.8"
                        android:text="@string/seul"
                        android:textColor="@color/common_google_signin_btn_text_light_focused" />

                    <RadioButton
                        android:id="@+id/accomp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:buttonTint="@color/colorPrimary"
                        android:onClick="onRadioButton_habi"
                        android:scaleX="0.8"
                        android:scaleY="0.8"
                        android:text="@string/accompagn_des_nombres_de_votre_famille"
                        android:textColor="@color/common_google_signin_btn_text_light_focused" />
                </RadioGroup>
            </LinearLayout>

            <TextView
                android:id="@+id/textView37"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/avez_vous_besoin_d_une_assistance"
                android:textColor="@color/common_google_signin_btn_text_light_focused"
                android:textSize="18sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioGroup
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/assis"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="80dp"
                        android:layout_marginStart="80dp"
                        android:layout_weight="1"
                        android:buttonTint="@color/colorPrimary"
                        android:onClick="onRadioButton_assistance"
                        android:text="@string/oui"
                        android:textColor="@color/common_google_signin_btn_text_light_focused" />

                    <RadioButton
                        android:id="@+id/noAssis"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="80dp"
                        android:layout_marginRight="80dp"
                        android:layout_weight="1"
                        android:buttonTint="@color/colorPrimary"
                        android:onClick="onRadioButton_assistance"
                        android:text="@string/non"
                        android:textColor="@color/common_google_signin_btn_text_light_focused" />
                </RadioGroup>
            </LinearLayout>

            <CheckBox
                android:id="@+id/checkBox2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:buttonTint="@color/colorPrimary"
                android:text="@string/j_accepte_les_conditions_g_n_rales_du_programme"
                android:textColor="@color/common_google_signin_btn_text_light_focused" />

            <CheckBox
                android:id="@+id/checkBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:buttonTint="@color/colorPrimary"
                android:text="@string/j_accepte_de_recevoir_les_nouveaut_s_fidelys_par_e_mail"
                android:textColor="@color/common_google_signin_btn_text_light_focused" />

            <Button
                android:id="@+id/envoyer"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:onClick="terminer"
                android:text="@string/terminer"
                android:textColor="@android:color/background_light"
                android:theme="@style/MyButton" />
        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>