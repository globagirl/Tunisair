<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back_ins"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.tunisair.khawla.tunisair.AccountActivity"
    tools:showIn="@layout/app_bar_account">

    <Button
        android:id="@+id/B_profil"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@drawable/button2"
        android:text="Profile"
        android:textColor="@android:color/holo_red_dark"
        tools:layout_editor_absoluteX="42dp"
        tools:layout_editor_absoluteY="16dp" />

    <Button
        android:id="@+id/B_mouvement"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@drawable/button2"
        android:text="Mouvement"
        android:textColor="@android:color/holo_red_dark"
        tools:layout_editor_absoluteX="202dp"
        tools:layout_editor_absoluteY="16dp" />

    <Button
        android:id="@+id/B_billet"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@drawable/button2"
        android:text="Achat Billet"
        android:textColor="@android:color/holo_red_dark"
        tools:layout_editor_absoluteX="42dp"
        tools:layout_editor_absoluteY="195dp" />

    <Button
        android:id="@+id/B_miles"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@drawable/button2"
        android:text="Achat Miles"
        android:textColor="@android:color/holo_red_dark"
        tools:layout_editor_absoluteX="202dp"
        tools:layout_editor_absoluteY="195dp" />

    <Button
        android:id="@+id/B_rec"
        android:layout_width="310dp"
        android:layout_height="100dp"
        android:background="@drawable/button"
        android:text="Reclamation"
        android:textColor="@android:color/holo_red_dark"
        tools:layout_editor_absoluteX="42dp"
        tools:layout_editor_absoluteY="370dp" />

</android.support.constraint.ConstraintLayout>
